{% for trick in tricks %}
    <figure class="col-lg-3 col-md-4 col-6">
        <img alt="{{ trick.name }}" src="{{ asset('img/tricks/') }}{{ trick.defaultImage.path }}" 
            class="img-fluid" />
        <div class="gallery-infos">
            <div class="gallery-title">
                <a href="{{ path('app_trick_show', {'id': trick.id}) }}">{{ trick.name }}</a>
            </div>
            <div class="gallery-btn">
                <button type="button" class="btn btn-light btn-sm">
                    <i class="bi bi-pencil-fill"></i>
                </button>
                <button type="button" class="btn btn-light btn-sm openModalDeleteTrick" data-bs-toggle="modal" 
                    data-bs-target="#deleteTrickModal" data-id="{{ trick.id }}">
                    <i class="bi bi-trash3-fill"></i>
                </button>
            </div>
        </div>
    </figure>
{% endfor %}