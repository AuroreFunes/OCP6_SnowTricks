{% extends 'commons/base.html.twig' %}

{% set pageTitle = "Réinitialiser le mot de passe" %}
{% set pageSubTitle = "Choisir un nouveau mot de passe" %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block style %}
    <style type="text/css">
        header.masthead { 
            background: url("{{ asset('img/error-bg.jpg') }}") center no-repeat !important;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-center {
            text-align: center;
        }
    </style>
{% endblock %}

{% block content %}

{% include 'commons/flashMessages.html.twig' %}

<div class="row justify-content-center">
    <div class="col-4">

        {% form_theme resetPasswordForm 'bootstrap_4_layout.html.twig' %}
        {{ form_start(resetPasswordForm) }}

        {{ form_row(resetPasswordForm.password, {
            'label': "Nouveau mot de passe",
            'attr': {
                'placeholder': "Votre nouveau mot de passe"
            }})
        }}

        {{ form_row(resetPasswordForm.password_confirm, {
            'label': "Confirmez le mot de passe",
            'attr': {
                'placeholder': "Votre nouveau mot de passe"
            }})
        }}

        <div class="form-group btn-center">
            <input type="submit" value="Valider" class="btn btn-success" />
        </div>

        {{ form_end(resetPasswordForm)}}
    </div>
</div>
{% endblock %}